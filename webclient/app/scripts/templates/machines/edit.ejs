<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            <a href="machines"><i class="fa fa-chevron-left"></i></a> Edit Machine <%- machineID %>
        </h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<!-- /.row -->
<div class="row">
    <div class="col-lg-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                Change Machine data
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                        <form role="form" class="clearfix">
                            <div class="form-group">
                                <label>Name</label>
                                <input class="form-control" placeholder="My Machine" name="name" value="<%- machine.name %>">
                            </div>
                            <div class="form-group">
                                <label>IP</label>
                                <input class="form-control" placeholder="196.186.0.1" name="ip" value="<%- machine.ip %>">
                            </div>
                            <div class="pull-right">
                                <button type="reset" class="btn btn-default">
                                    <i class="fa fa-eraser"></i> Clear
                                </button>
                                <button type="submit" class="btn btn-success">
                                    <i class="fa fa-plus"></i> Add Machine
                                </button>
                            </div>
                        </form>

                        <div class="alert alert-placeholder"></div>
                    </div>
                    <!-- /.col-lg-6 (nested) -->
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
